@{
    var userData = User.GetUserData();
}
@* <div class="d-flex justify-content-center align-items-center mx-auto"> *@
    <section class="mt-60 mb-60" style="">
        <div class="card col-6 mx-auto">
            <div class="card-header">
                <h4 class="text-center">Đổi mật khẩu</h4>
            </div>
            <div class="card-body">
                <form action="~/Account_Inf/ChangePassword" method="post">
                    <input type="hidden" name="UserID" value="@userData?.UserID" />
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>Mật khẩu hiện tại <span class="required">*</span></label>
                            <input required="" class="form-control square" name="oldPassword" autofocus type="password">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Mật khẩu mới <span class="required">*</span></label>
                            <input required="" class="form-control square" name="newPassword" type="password">
                            @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color: #f00" })
                        </div>
                        <div class="form-group col-md-12">
                            <label>Xác nhận mật khẩu <span class="required">*</span></label>
                            <input required="" class="form-control square" name="confirmPassword" type="password">
                            @Html.ValidationMessage(nameof(Model.Email), new { @style = "color: #f00" })
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.ValidationMessage("Error", new { @style = "color: #f00" })
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                                        <a href="~/Home/Index" class="btn bg-light text-danger btn-outline-danger" role="button" style="border-color: crimson; border-radius: 25px">Bỏ qua</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
@* </div> *@