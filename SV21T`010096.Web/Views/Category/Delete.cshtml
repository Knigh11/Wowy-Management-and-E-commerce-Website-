@model SV21T1020096.DomainModels.Category
@{
    ViewBag.Title = "Xoá người loại hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form asp-action="Delete" asp-controller="Category" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label for="">Tên loại hàng:</label>
                <p class="form-control-static">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label for="">Mô tả:</label>
                <p class="form-control-static">@Model.Description</p>
            </div>
            <div class="form-group text-right">
                @if (!SV21T1020096.BusinessLayers.CommonDataService.InUsedCategory(Model.CategoryID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Xoá dữ liệu
                    </button>
                }
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
