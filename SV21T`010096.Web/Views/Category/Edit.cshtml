@model SV21T1020096.DomainModels.Category
@{
    ViewBag.Title = "Chỉnh sửa thông tin loại hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form asp-action="Save" asp-controller="Category" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label for="">Tên loại hàng:</label>
                <input type="text" class="form-control" id="" name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>
            <div class="form-group">
                <label for="">Mô tả:</label>
                <input type="text" class="form-control" id="" name="@nameof(Model.Description)" value="@Model.Description">
                @Html.ValidationMessage(nameof(Model.Description))
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>


