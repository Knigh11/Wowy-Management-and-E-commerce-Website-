<header class="main-header">
    <!-- Logo -->
    <a href="~/Home/Index" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>Wowy Shop</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Wowy Shop</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

                <!-- User Account: style can be found in dropdown.less -->
                @{
                    var userData = User.GetUserData();
                    if (userData != null)
                    {
                        string url = "https://litecommercdb.s3.ap-southeast-2.amazonaws.com/";
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@url@userData.Photo" class="user-image" alt="User Image">
                                <span class="hidden-xs">@userData.DisplayName</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@url@userData.Photo" class="img-circle" alt="User Image">

                                    <p>
                                        @userData.DisplayName
                                        <small>Member since Nov. 2012</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="~/Account/ChangePassword" class="btn btn-default btn-flat">
                                            Đổi mật khẩu
                                        </a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="~/Account/Logout" class="btn btn-default btn-flat">Đăng xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="d-flex align-items-center" >
                            <div style="margin-top:8px; margin-right:8px">
                                <a href="~/Account/Login" class="btn btn-default btn-default btn-flat dark">Login</a>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>
</header>