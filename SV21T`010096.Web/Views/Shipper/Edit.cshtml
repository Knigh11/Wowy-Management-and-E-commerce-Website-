@model SV21T1020096.DomainModels.Shipper
@{
    ViewBag.Title = ViewBag.Title;
}
<div class="box box-primary">
    <div class="box-body">
        <form asp-action="Save" asp-controller="Shipper" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label for="">Tên người giao hàng:</label>
                <input type="text" class="form-control" id="" name="@nameof(Model.ShipperName)" value="@Model.ShipperName">
                @Html.ValidationMessage(nameof(Model.ShipperName))
            </div>
            <div class="form-group">
                <label for="">Điện thoại:</label>
                <input type="text" class="form-control" id="" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

