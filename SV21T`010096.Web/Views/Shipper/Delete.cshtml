@model SV21T1020096.DomainModels.Shipper
@{
    ViewBag.Title = "Xoá người giao hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form asp-action="Delete" asp-controller="Shipper" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label for="">Tên người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label for="">Điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group text-right">
                @if (!SV21T1020096.BusinessLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Xoá dữ liệu
                    </button>
                    
                }
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
