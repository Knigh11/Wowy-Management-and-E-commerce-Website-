@model SV21T1020096.DomainModels.Supplier
@{
    ViewBag.Title = "Xoá nhà cung cấp";
}
<div class="box box-primary">
    <div class="box-body">
        <form asp-action="Delete" asp-controller="Supplier" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label for="">Tên nhà cung cấp:</label>
                <p class="form-control-static" style="padding-left: 20px">@Model.SupplierName</p>
            </div>
            <div class="form-group">
                <label for="">Tên giao dịch:</label>
                <p class="form-control-static" style="padding-left: 20px">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label for="">Điện thoại:</label>
                <p class="form-control-static" style="padding-left: 20px">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label for="">Email:</label>
                <p class="form-control-static" style="padding-left: 20px">@Model.Email</p>
            </div>
            <div class="form-group">
                <label for="">Địa chỉ:</label>
                <p class="form-control-static" style="padding-left: 20px">@Model.Address</p>
            </div>
            <div class="form-group">
                <label for="">Tỉnh thành:</label>
                <p class="form-control-static" style="padding-left: 20px">@Model.Province</p>
            </div>
            <div class="form-group text-right">
                @if (!SV21T1020096.BusinessLayers.CommonDataService.InUsedSupplier(Model.SupplierID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xoá dữ liệu
                    </button>
                }
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>


