@model SV21T1020096.DomainModels.Customer

@{
    ViewBag.Title = "Xoá khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form asp-action="Delete" asp-controller="Customer" method="post">
            <!-- Truyền ID khách hàng để controller nhận diện -->
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />

            <div class="form-group">
                <label for="">Tên khách hàng:</label>
                <p class="form-control-static">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label for="">Tên giao dịch:</label>
                <p class="form-control-static">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label for="">Điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label for="">Email:</label>
                <p class="form-control-static">@Model.Email</p>
            </div>
            <div class="form-group">
                <label for="">Địa chỉ:</label>
                <p class="form-control-static">@Model.Address</p>
            </div>
            <div class="form-group">
                <label for="">Tỉnh thành:</label>
                <p class="form-control-static">@Model.Province</p>
            </div>
            <div class="form-group">
                <label> Tài khoản đang hoạt động</label>
                <p class="form-control-static">@(Model.IsLocked ? "Không" : "Có")</p>
            </div>
            <div class="form-group text-right">
                @if (!SV21T1020096.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xoá dữ liệu
                    </button>
                }
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
